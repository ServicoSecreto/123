<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A723E223"
    android:padding="16dp">

    <ImageView
        android:id="@+id/win_image_view"
        android:layout_width="395dp"
        android:layout_height="661dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:contentDescription="VocÃª Ganhou!"
        android:src="@drawable/_pngms" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/win_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Tempo: 00:00"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/play_again_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Jogar Novamente?" />

    <Button
        android:id="@+id/viewLeaderboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/play_again_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Placar" />

</RelativeLayout>
